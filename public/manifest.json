{
  "manifest_version": 3,
  "name": "Job Application Co-Pilot",
  "version": "1.0.0",
  "description": "Privacy-first Chrome extension for intelligent job application autofill",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.workday.com/*",
    "https://*.greenhouse.io/*", 
    "https://*.lever.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Application Co-Pilot"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.workday.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*"
      ],
      "js": ["src/content/index.ts"]
    }
  ]
}